@{
    ViewBag.Title = "Asociar Jugador a Equipo";
}

<h2>Asociar Jugador a Equipo</h2>

<form asp-action="Associate" method="post">
    <div>
        <label for="playerId">Jugador</label>
        <select id="playerId" name="playerId">
            @foreach (var player in ViewBag.Players)
            {
                <option value="@player.Id">@player.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="teamId">Equipo</label>
        <select id="teamId" name="teamId">
            @foreach (var team in ViewBag.Teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>
    <button type="submit">Asociar</button>
</form>